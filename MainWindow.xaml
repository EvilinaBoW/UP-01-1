<Window x:Class="WpfApp12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp12"
        mc:Ignorable="d"
        Title="Алгоритмы и структуры данных - Вариант 10" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="ВАРИАНТ 10 - Алгоритмы и структуры данных" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="10">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFC77BFF" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <TabControl Grid.Row="2" Margin="10">
            <!-- Задача 10.1 НОК через НОД -->
            <TabItem Header="10.1 НОК через НОД">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Число A:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtNokA" Width="80" Margin="5" Text="12"/>
                        <TextBlock Text="Число B:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtNokB" Width="80" Margin="5" Text="18"/>
                        <Button x:Name="btnCalculateNok" Content="Вычислить НОК" Width="100" Margin="10,0" Click="BtnCalculateNok_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="txtNokResult" Grid.Row="1" FontSize="16" FontWeight="Bold" 
                               Margin="10" Foreground="DarkGreen"/>
                    <TextBlock Grid.Row="2" Text="НОК(a,b) = a * b / НОД(a,b). Поддержка BigInteger для больших чисел." 
                               Margin="10" TextWrapping="Wrap" Foreground="Gray"/>
                </Grid>
            </TabItem>

            <!-- Задача 10.2 Решето Эратосфена -->
            <TabItem Header="10.2 Решето Эратосфена">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBlock Text="От:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtEratStart" Width="80" Margin="5" Text="2"/>
                        <TextBlock Text="До:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtEratEnd" Width="80" Margin="5" Text="1000"/>
                        <Button x:Name="btnFindPrimes" Content="Найти простые" Width="100" Margin="10,0" Click="BtnFindPrimes_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="txtEratResult" Grid.Row="1" FontSize="14" FontWeight="Bold" 
                               Margin="10" Foreground="DarkBlue"/>
                    <ListBox x:Name="lstPrimes" Grid.Row="2" Margin="10"/>
                </Grid>
            </TabItem>

            <!-- Задача 10.3 Стек и проверка скобок -->
            <TabItem Header="10.3 Стек - Проверка скобок">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Выражение:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtBrackets" Width="300" Margin="5" Text="(({}[]))"/>
                        <Button x:Name="btnCheckBrackets" Content="Проверить скобки" Width="120" Margin="10,0" Click="BtnCheckBrackets_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="txtBracketsResult" Grid.Row="1" FontSize="16" FontWeight="Bold" 
                               Margin="10" Foreground="DarkRed"/>
                    <StackPanel Grid.Row="2" Margin="10">
                        <TextBlock Text="Стек операций:" FontWeight="Bold"/>
                        <ListBox x:Name="lstStack" Height="100"/>
                        <Button x:Name="btnStackPush" Content="Push" Width="60" Margin="5" Click="BtnStackPush_Click"/>
                        <Button x:Name="btnStackPop" Content="Pop" Width="60" Margin="5" Click="BtnStackPop_Click"/>
                        <Button x:Name="btnStackPeek" Content="Peek" Width="60" Margin="5" Click="BtnStackPeek_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Задача 10.4 Подсчет инверсий -->
            <TabItem Header="10.4 Подсчет инверсий">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Массив:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtInversions" Width="400" Margin="5" Text="5,2,8,1,9,3,7,4,6"/>
                        <Button x:Name="btnCountInversions" Content="Подсчитать инверсии" Width="140" Margin="10,0" Click="BtnCountInversions_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="txtInversionsResult" Grid.Row="1" FontSize="16" FontWeight="Bold" 
                               Margin="10" Foreground="DarkMagenta"/>
                    <ListBox x:Name="lstInversions" Grid.Row="2" Margin="10"/>
                </Grid>
            </TabItem>

            <!-- Задача 10.5 JSON обработка (упрощенная без Newtonsoft) -->
            <TabItem Header="10.5 JSON обработка">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button x:Name="btnLoadJson" Content="Загрузить JSON" Width="120" Margin="5" Click="BtnLoadJson_Click"/>
                        <TextBox x:Name="txtSearchField" Width="100" Margin="5" Text="name"/>
                        <TextBox x:Name="txtSearchValue" Width="100" Margin="5" Text=""/>
                        <Button x:Name="btnSearchJson" Content="Поиск" Width="80" Margin="10,0" Click="BtnSearchJson_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="txtJsonStatus" Grid.Row="1" Margin="10" Foreground="Gray"/>
                    <TextBlock Grid.Row="2" Text="JSON данные:" FontWeight="Bold" Margin="10"/>
                    <TextBox x:Name="txtJsonContent" Grid.Row="3" Margin="10" TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto" IsReadOnly="True" FontFamily="Consolas"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Исправленный StatusBar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem x:Name="statusBar" Content="Готов к работе"/>
        </StatusBar>
    </Grid>
</Window>
