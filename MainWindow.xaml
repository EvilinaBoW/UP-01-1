<Window x:Class="WpfApp12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Алгоритмы - Вариант 10" Height="750" Width="1100">

    <Window.Resources>
        <!-- Нежно-розовый + угольно-серый палитра -->
        <SolidColorBrush x:Key="PinkPrimary" Color="#F8C8DC"/>
        <SolidColorBrush x:Key="PinkAccent" Color="#FFB6C1"/>
        <SolidColorBrush x:Key="PinkHover" Color="#F4A8C8"/>
        <SolidColorBrush x:Key="CharcoalPrimary" Color="#2D3436"/>
        <SolidColorBrush x:Key="CharcoalDark" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="CharcoalLight" Color="#636E72"/>
        <SolidColorBrush x:Key="WhiteText" Color="White"/>
        <SolidColorBrush x:Key="PinkText" Color="#E84393"/>

        <!-- ИНТЕРАКТИВНЫЕ кнопки -->
        <Style x:Key="InteractiveButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CharcoalPrimary}"/>
            <Setter Property="Foreground" Value="{StaticResource WhiteText}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource PinkAccent}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E84393" ShadowDepth="3" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PinkHover}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#E84393" ShadowDepth="8" BlurRadius="15"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource PinkAccent}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#E84393" ShadowDepth="1" BlurRadius="5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Результаты -->
        <Style x:Key="AnimatedResult" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource PinkText}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <!-- ГРАДИЕНТНЫЙ ХЕДЕР -->
        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F8C8DC" Offset="0"/>
                    <GradientStop Color="#FFB6C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="АЛГОРИТМЫ DATA STRUCTURES" 
                       Foreground="#2D3436" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- КОНТЕНТ -->
        <Border Grid.Row="1" Background="#2D3436" Margin="25">
            <TabControl Margin="25" Background="Transparent">

                <!-- 10.1 НОК -->
                <TabItem Header="НОК через НОД">
                    <Border Background="#636E72" Margin="25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,25">
                                <TextBlock Text="A:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" 
                                         Margin="0,0,15,0" Foreground="White"/>
                                <TextBox x:Name="txtNokA" Width="120" Text="12" FontSize="16"/>
                                <TextBlock Text="x" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0"/>
                                <TextBlock Text="B:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" 
                                         Margin="0,0,15,0" Foreground="White"/>
                                <TextBox x:Name="txtNokB" Width="120" Text="18" FontSize="16"/>
                                <Button x:Name="btnCalculateNok" Content="НОК" Style="{StaticResource InteractiveButton}" 
                                      Click="BtnCalculateNok_Click"/>
                            </StackPanel>

                            <TextBlock x:Name="txtNokResult" Grid.Row="1" Style="{StaticResource AnimatedResult}"/>

                            <TextBlock Grid.Row="2" Text="НОК(a,b) = |a × b| / НОД(a,b)" HorizontalAlignment="Center" 
                                     FontSize="14" Foreground="#F8C8DC" Margin="0,0,0,20"/>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- 10.2 Решето -->
                <TabItem Header="РЕШЕТО">
                    <Border Background="#636E72" Margin="25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,25">
                                <TextBlock Text="От:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" 
                                         Margin="0,0,15,0" Foreground="White"/>
                                <TextBox x:Name="txtEratStart" Width="110" Text="2" FontSize="16"/>
                                <TextBlock Text="До:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" 
                                         Margin="30,0,15,0" Foreground="White"/>
                                <TextBox x:Name="txtEratEnd" Width="110" Text="1000" FontSize="16"/>
                                <Button x:Name="btnFindPrimes" Content="Найти" Style="{StaticResource InteractiveButton}" 
                                      Click="BtnFindPrimes_Click"/>
                            </StackPanel>

                            <TextBlock x:Name="txtEratResult" Grid.Row="1" Style="{StaticResource AnimatedResult}"/>

                            <ListBox x:Name="lstPrimes" Grid.Row="2" Margin="0,10" BorderThickness="0"/>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- 10.3 Стек -->
                <TabItem Header="СТЕК">
                    <Border Background="#636E72" Margin="25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,25">
                                <TextBlock Text="Выражение:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" 
                                         Margin="0,0,15,0" Foreground="White"/>
                                <TextBox x:Name="txtBrackets" Width="380" Text="(({}[]))" FontSize="16"/>
                                <Button x:Name="btnCheckBrackets" Content="Check" Style="{StaticResource InteractiveButton}" 
                                      Click="BtnCheckBrackets_Click"/>
                            </StackPanel>

                            <TextBlock x:Name="txtBracketsResult" Grid.Row="1" Style="{StaticResource AnimatedResult}"/>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ListBox x:Name="lstStack" Grid.Column="0" Margin="0,0,20,0" BorderThickness="0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <Button x:Name="btnStackPush" Content="Push" Style="{StaticResource InteractiveButton}" 
                                          Click="BtnStackPush_Click"/>
                                    <Button x:Name="btnStackPop" Content="Pop" Style="{StaticResource InteractiveButton}" 
                                          Click="BtnStackPop_Click"/>
                                    <Button x:Name="btnStackPeek" Content="Peek" Style="{StaticResource InteractiveButton}" 
                                          Click="BtnStackPeek_Click"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- 10.4 Инверсии -->
                <TabItem Header="ИНВЕРСИИ">
                    <Border Background="#636E72" Margin="25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,25">
                                <TextBlock Text="Массив:" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" 
                                         Margin="0,0,15,0" Foreground="White"/>
                                <TextBox x:Name="txtInversions" Width="480" Text="5,2,8,1,9,3,7,4,6" FontSize="16"/>
                                <Button x:Name="btnCountInversions" Content="Count" Style="{StaticResource InteractiveButton}" 
                                      Click="BtnCountInversions_Click"/>
                            </StackPanel>

                            <TextBlock x:Name="txtInversionsResult" Grid.Row="1" Style="{StaticResource AnimatedResult}"/>

                            <ListBox x:Name="lstInversions" Grid.Row="2" Margin="0,10" BorderThickness="0"/>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- 10.5 JSON -->
                <TabItem Header="JSON">
                    <Border Background="#636E72" Margin="25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,20">
                                <Button x:Name="btnLoadJson" Content="Load" Style="{StaticResource InteractiveButton}" 
                                      Click="BtnLoadJson_Click"/>
                                <TextBox x:Name="txtSearchField" Width="110" Margin="12,0" Text="name" FontSize="14"/>
                                <TextBox x:Name="txtSearchValue" Width="110" Margin="12,0" FontSize="14"/>
                                <Button x:Name="btnSearchJson" Content="Search" Style="{StaticResource InteractiveButton}" 
                                      Click="BtnSearchJson_Click"/>
                            </StackPanel>

                            <TextBlock x:Name="txtJsonStatus" Grid.Row="1" HorizontalAlignment="Center" FontSize="16" 
                                     FontWeight="Bold" Margin="0,0,0,10" Foreground="#E84393"/>

                            <TextBlock Grid.Row="2" Text="JSON данные:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" 
                                     Foreground="White"/>

                            <TextBox x:Name="txtJsonContent" Grid.Row="3" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" 
                                   IsReadOnly="True" FontFamily="Consolas" FontSize="13" Margin="0,10" Height="280"/>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Border>

        <!-- СТАТУСБАР -->
        <Border Grid.Row="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1A1A1A" Offset="0"/>
                    <GradientStop Color="#2D3436" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StatusBar Background="Transparent">
                <StatusBarItem x:Name="statusBar" Content="Готов к вычислениям" Foreground="#F8C8DC" 
                             FontWeight="Bold" FontSize="14" HorizontalContentAlignment="Center"/>
            </StatusBar>
        </Border>
    </Grid>
</Window>
